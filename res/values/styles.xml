<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DiabloButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_red_selector</item>
        <item name="android:textColor">@color/diablo_orange</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Theme.Diablo" parent="Theme.Sherlock">
        <item name="actionBarStyle">@style/Widget.Diablo.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Diablo.ActionBar</item>
        <item name="actionBarTabStyle">@style/Widget.Diablo.ActionBar.TabBar</item>
        <item name="android:actionBarTabStyle">@style/Widget.Diablo.ActionBar.TabBar</item>
        <item name="actionBarTabTextStyle">@style/Widget.Diablo.ActionBar.TabText</item>
        <item name="android:actionBarTabTextStyle">@style/Widget.Diablo.ActionBar.TabText</item>
        <item name="actionBarItemBackground">@drawable/ad_selectable_background</item>
        <item name="android:actionBarItemBackground">@drawable/ad_selectable_background</item>
        <item name="actionDropDownStyle">@style/Widget.Diablo.Spinner.DropDown.ActionBar</item>
        <item name="android:actionDropDownStyle">@style/Widget.Diablo.Spinner.DropDown.ActionBar</item>
        <item name="spinnerDropDownItemStyle">@style/Widget.Diablo.DropDownItem.Spinner</item>
        <item name="android:spinnerDropDownItemStyle">@style/Widget.Diablo.DropDownItem.Spinner</item>
        <item name="spinnerItemStyle">@style/Widget.Diablo.TextView.SpinnerItem</item>
        <item name="android:spinnerItemStyle">@style/Widget.Diablo.TextView.SpinnerItem</item>
    </style>

    <style name="Widget.Diablo.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="background">@drawable/bg_solid</item>
        <item name="android:background">@drawable/bg_solid</item>
        <item name="titleTextStyle">@style/TextAppearance.Diablo.Widget.ActionBar.Title</item>
        <item name="android:titleTextStyle">@style/TextAppearance.Diablo.Widget.ActionBar.Title</item>
    </style>

    <style name="Widget.Diablo.ActionBar.TabBar" parent="Widget.Sherlock.ActionBar.TabBar">
        <item name="background">@drawable/actionbar_tab_bg</item>
        <item name="android:background">@drawable/actionbar_tab_bg</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>

    <style name="TextAppearance.Diablo.Widget.ActionBar.Title" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Widget.Diablo.ActionBar.TabText" parent="Widget.Sherlock.ActionBar.TabText">
        <item name="android:textColor">@color/ad_tab_orange</item>
        <item name="android:textSize">10dp</item>
    </style>
    
    <style name="Widget.Diablo.DropDownItem.Spinner" parent="Widget.Sherlock.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/TextAppearance.Diablo.Widget.DropDownItem</item>
    </style>

    <style name="TextAppearance.Diablo.Widget.DropDownItem" parent="TextAppearance.Sherlock.Widget.DropDownItem">
        <item name="android:textColor">@color/diablo_orange</item>
    </style>
    
    <style name="Widget.Diablo.TextView.SpinnerItem" parent="Widget.Sherlock.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/TextAppearance.Diablo.Widget.TextView.SpinnerItem</item>
    </style>
    
    <style name="TextAppearance.Diablo.Widget.TextView.SpinnerItem" parent="TextAppearance.Sherlock.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/diablo_orange</item>
    </style>
    
    <style name="Widget.Diablo.Spinner.DropDown.ActionBar" parent="Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:dropDownSelector">@drawable/list_selector_holo_dark</item>
        <item name="background">@drawable/spinner_holo_dark</item>
        <item name="android:background">@drawable/spinner_holo_dark</item>
    </style>
</resources>